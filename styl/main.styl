/* Normalize */

html {
    box-sizing border-box
}
html * {
    box-sizing inherit
}
body {
    margin 0
    font normal 16px sans-serif
}

/* Global */

input {
    padding 4px
    height 26px
    border-radius 2px
    border 1px solid #ccc
}
label {
    font-size .8rem
}

button {
    display block
    padding 6px 12px
    border none
    border-radius 2px
    background #479BE2
    font-size 1rem
    color #fafafa
}
a {
    color #242424
    text-decoration none

    &:hover {
        text-decoration underline
    }
}
h3 {
    font-weight normal
    margin .5rem 0
}

/* Application */

.app {
    padding 10px
    margin 0 auto
    max-width 768px
}

/* Top section */

.top {
    display flex

    .search-form,
    .repo-info {
        flex 1
    }
    .stats {
        margin 20px 0 0

        span {
            margin 0 10px

            &:first-child {
                margin 0 10px 0 0
            }
            &:last-child {
                margin 0 0 0 10px
            }
        }
        .fa::before {
            margin 0 5px 0 0
        }
    }
}

.repo-name {
    margin-bottom 0
}

/* Search form */

.search-form {
    max-width 135px
    margin 0 20px 0 0
}

.search-form .field {
    margin 10px 0
    position relative

    label,
    input {
        display block
    }

    .fa-spinner {
        position absolute
        bottom 5px
        left 115px
        transform rotate(0deg)
        animation spin 1000ms linear infinite
    }
}

@keyframes spin {
    to {
        transform rotate(360deg)
    }
}

/* Dropdown */

.dropdown {
    font-size .7rem
    position relative

    .list {
        margin 0
        padding 0
        list-style none
        position absolute
        top 5px
        background #ffffff
    }
    .item {
        padding 2px
        border-bottom 1px solid #242424

        &:focus {
            background #479BE2
            color #fafafa
        }
    }
}

/* Issues list */

.issues .list {
    width 100%
}
.issue {
    font-size .8rem

    td {
        padding 8px 2px 4px 2px
        border-bottom 1px solid #242424
    }
    .time {
        font-size .7rem
    }
}

/* Pagination form */

.pagination {
    text-align center
    margin 30px 0

    .prev,
    .next,
    .field {
        display inline-block
        vertical-align middle
    }
    input[type="number"] {
        width 50px
        text-align center

        &:disabled {
            background #ccc
        }
    }
    .field {
        margin 0 20px

        label {
            margin 0 10px 0 0
        }
    }
}

/* Notification */

.notification .message {
    background #fafafa
    color #242424
    border 1px solid #242424
    padding 10px
    position absolute
    top 0
    right 0
}

